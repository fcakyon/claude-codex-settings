{
  "mcpServers": {
    "azure": {
      "command": "npx",
      "args": ["-y", "@azure/mcp@latest", "server", "start"]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
          "Authorization": "Bearer YOUR_GITHUB_PAT_HERE"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@ubie-oss/slack-mcp-server@0.1.3"],
      "env": {
        "NPM_CONFIG_//npm.pkg.github.com/:_authToken": "...",
        "NPM_CONFIG_@ubie-oss:registry": "https://npm.pkg.github.com/",
        "SLACK_BOT_TOKEN": "xoxb-...",
        "SLACK_USER_TOKEN": "xoxp-..."
      }
    },
    "tavily": {
      "command": "npx",
      "args": ["-y", "tavily-mcp@0.2.9"],
      "env": {
        "TAVILY_API_KEY": "tvly-..."
      }
    },
    "mongodb": {
      "command": "npx",
      "args": [
        "-y",
        "mongodb-mcp-server",
        "--connectionString",
        "mongodb://localhost:27017/myDatabase",
        "--readOnly"
      ]
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.supabase.com/mcp?project_ref=YOUR_PROJECT_ID&read_only=true&features=database"
      ]
    },
    "paper-search": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/paper-search"]
    }
  }
}
