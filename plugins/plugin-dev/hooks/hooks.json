{
  "description": "Plugin development marketplace sync hooks",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/sync_marketplace_to_plugins.py"
          }
        ]
      }
    ]
  }
}
